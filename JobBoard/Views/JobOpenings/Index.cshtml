@using JobBoard.Models;

<h1>Jobs</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (JobOpening item in Model)
  {
   <li>@item.Title</li>
    <li>@item.Description</li>
    <li>@item.Contact.Name
      <ul>
        <li>@item.Contact.Email</li>
        <li>@item.Contact.PhoneNumber</li>
      </ul>
    </li>
  }
</ul>
<a href="/JobOpenings/Form">Add a new item.</a>
<a href="/JobOpenings/Delete">Delete List.</a>
